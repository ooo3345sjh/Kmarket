<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Kmarket</display-name>
  <welcome-file-list>
    <welcome-file>index.do</welcome-file>
  </welcome-file-list>
  
  <!-- 모델2 보안 설정 
  <security-constraint>
  	<display-name>Prohibit Model1</display-name>
  	<web-resource-collection>
  		<web-resource-name>secure page</web-resource-name>
  		<url-pattern>*.jsp</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>nobody</role-name>
  	</auth-constraint>
  </security-constraint>-->
  
    <filter>
  	<filter-name>LoginCheckFilter1</filter-name>
  	<filter-class>kr.co.Kmarket.filter.LoginCheckFilter1</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginCheckFilter1</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  
      <filter>
  	<filter-name>LoginCheckFilter2</filter-name>
  	<filter-class>kr.co.Kmarket.filter.LoginCheckFilter2</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginCheckFilter2</filter-name>
  	<url-pattern>/member/*</url-pattern>
  </filter-mapping>
  
   <!-- 인코딩 설정 --> 
   
  <filter>
 	<filter-name>SetCharEncoding</filter-name>
 	<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
 	<init-param>
 		<param-name>encoding</param-name>
 		<param-value>utf-8</param-value>
 	</init-param>
 </filter>
 <filter-mapping>
 	<filter-name>SetCharEncoding</filter-name>
 	<url-pattern>/*</url-pattern>
 </filter-mapping>
 

</web-app>





